<style>
    .pager {
        position: fixed;
        bottom: 0;
        width: 100%;
        background: white;
        border-top: #66ccff solid 1px;
    }

    .pager-inner {
        width: 900px;
        margin: 1rem auto;
        min-height: 3rem;
        text-align: center;
        display: grid;
        grid-template-columns: 3rem 3rem 3rem 3rem 3rem 3rem 3rem;
        grid-column-gap: 1.5rem;
        justify-content: center;
    }

    .pager-inner div {
        height: 3rem;
        width: 3rem;
        border: 1px solid #66ccff;
        border-radius: .5rem;
        cursor: pointer;
    }

    .pager-inner a {
        display: block;
        width: 100%;
        height: 100%;
        line-height: 3rem;
        color: #66ccff;
        font-size: 1.25rem;
        text-decoration: none;
    }

    .pager-inner div:hover {
        color: #103f91;
        border-color: #103f91 !important;
    }

     .pager-inner a:hover {
         color: #103f91;
     }

    .page-active {
        color: #606060;
        border-color: #606060 !important;
        line-height: 3rem;
    }
</style>

<div class="pager">
    <div class="pager-inner">
        {% if page > 1 %}
            <div style="grid-column: 1;"><a href="page_1.html">1</a></div>
        {% endif %}
        {% if page > 3 %}
            <div style="grid-column: 2;"><a href="page_{{ page - 2 }}.html">{{ page - 2 }}</a></div>
        {% endif %}
        {% if page > 2 %}
            <div style="grid-column: 3;"><a href="page_{{ page - 1 }}.html">{{ page - 1 }}</a></div>
        {% endif %}
        <div style="grid-column: 4;" class="page-active">{{ page }}</div>
        {% if page < total_pages - 1 %}
            <div style="grid-column: 5;"><a href="page_{{ page + 1 }}.html">{{ page + 1 }}</a></div>
        {% endif %}
        {% if page < total_pages - 2 %}
            <div style="grid-column: 6;"><a href="page_{{ page + 2 }}.html">{{ page + 2 }}</a></div>
        {% endif %}
        {% if page < total_pages %}
            <div style="grid-column: 7;"><a href="page_{{ total_pages }}.html">{{ total_pages }}</a></div>
        {% endif %}
    </div>
</div>
